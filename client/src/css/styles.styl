verticalElementSize = 60

@font-face
  font-family NotoMono
  src url('./assets/NotoMono-Regular.ttf')

div
  font-family NotoMono

html, body
  margin 0
  overflow hidden

p
  margin 0

.button
  display inline-block
  z-index 1
  padding 0
  margin-right 10px
  width verticalElementSize px
  height verticalElementSize px
  border none
  background-size 100%
  pointer-events all

.panelDiv
  display block
  text-align center
  z-index 0
  width 100%
  height 100%
  border 0
  margin 0 auto

.infoComponentDiv
  overflow hidden
  white-space nowrap
  display inline-block
  text-align left
  margin-right 10px
  z-index 1
  height verticalElementSize px
  width verticalElementSize*2 px
  border none
  padding 0
  background-color indianred

.infoComponentDivContent
  margin-left 10px

#uiStats
  position fixed
  z-index 1
  top 0; left 0
  opacity 0.5

#gameCanvas
  z-index 0
  width 100%
  height 100%
  margin 0
  pointer-events all

#uiMainPanelVertical
  position fixed
  z-index 1
  bottom 0
  width 100%
  height 60px
  pointer-events none
  background-color aqua

#uiMainPanelHorizontal
  position fixed
  z-index 1
  right 0
  top 0
  height 100%
  width 30%
  pointer-events none
  background-color aqua