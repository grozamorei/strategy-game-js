base(zIndex = 1)
  position absolute
  z-index zIndex

divButton()
  width 100%
  height 100%
  margin 0 auto
  border none
  background-size 100%
  pointer-events all

html, body
  margin 0
  overflow hidden

#uiRoot
  position fixed
  width 100%
  height 100%
  left: 0
  top: 0
  z-index 1
  pointer-events none

#uiStats
  base()
  top 0; left 0
  opacity 0.5

#gameCanvas
  z-index 0
  width 100%
  height 100%
  margin 0
  pointer-events all

#uiTurnPanel
  base()
  top 0
  right 5%
  left 5%
  height 1%
  background red
  opacity 0.3

#uiFullScreenPanel
  base()
  right 1px
  bottom 1px
  width: 75px
  height 75px

#uiFullScreenBtnExpand
  background url('./assets/ui/fullscreen_expand.png') no-repeat
  divButton()

#uiFullScreenBtnCollapse
  background url('./assets/ui/fullscreen_collapse.png') no-repeat
  divButton()