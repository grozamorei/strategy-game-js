html, body
  margin 0
  overflow hidden

.button
  display block
  z-index 1
  padding 0
  margin 0 auto
  width 60px
  height 60px
  border none
  background-size 100%
  pointer-events all

.panelDiv
  display block
  z-index 0
  width 100%
  height 100%
  border 0
  margin 0 auto

#uiStats
  position fixed
  z-index 1
  top 0; left 0
  opacity 0.5

#gameCanvas
  z-index 0
  width 100%
  height 100%
  margin 0
  pointer-events all

#uiMainPanelVertical
  position fixed
  z-index 1
  bottom 0
  width 100%
  height 60px
  pointer-events none
  background-color aqua

#uiMainPanelHorizontal
  position fixed
  z-index 1
  right 0
  top 0
  height 100%
  width 30%
  pointer-events none
  background-color aqua